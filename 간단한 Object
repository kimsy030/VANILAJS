    function averageRating(name){
        let result = products.find(function(item){
            return item['name']===name;
        });
        const sum = result.ratings.reduce(function item(pre,cur){
           return pre+cur.rate;
        },0);
        const average = sum/result.ratings.length;
        console.log(average);
